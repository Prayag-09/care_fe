{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "reviewers": [
    "@ohcnetwork/care-fe-code-reviewers"
  ],
  "automergeStrategy": "squash",
  "automergeType": "pr",
  "schedule": [
    "* 0-3 * * 1"
  ],
  "packageRules": [
    {
      "groupName": "all dependencies (minor, patch)",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}